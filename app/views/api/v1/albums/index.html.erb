<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">Albums</h1>

<hr class="mt-2 mb-5">

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>User Id</th>
      <th>Title</th>
      <th>Photos</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album["id"] %></td>
        <td><%= album["userId"] %></td>
        <td><%= album["title"] %></td>
        <td><%= link_to 'Show', api_v1_album_path(album["id"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
