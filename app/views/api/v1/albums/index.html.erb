<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0"><%= t('.title_page') %></h1>

<hr class="mt-2 mb-5">

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.id') %></th>
      <th><%= t('.user') %> Id</th>
      <th><%= t('.title') %></th>
      <th><%= t('.photos') %></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album["id"] %></td>
        <td><%= album["userId"] %></td>
        <td><%= album["title"] %></td>
        <td><%= link_to t(:show), api_v1_album_path(album["id"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @albums, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
