<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0"><%= t('.title') %></h1>

<hr class="mt-2 mb-5">

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.username') %></th>
      <th><%= t('.email') %></th>
      <th><%= t('.phone') %></th>
      <th><%= t('.website') %></th>
      <th><%= t('.albums') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user["name"] %></td>
        <td><%= user["username"] %></td>
        <td><%= user["email"] %></td>
        <td><%= user["phone"] %></td>
        <td><%= link_to user["website"], "http://#{user["website"]}", target: "_blank" %></td>
        <td><%= link_to t(:show), api_v1_album_by_user_path(user["id"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
