<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0"><%= t('.title_page') %></h1>

<hr class="mt-2 mb-5">

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.id')%></th>
      <th><%= t('.user')%> Id</th>
      <th><%= t('.title')%></th>
      <th><%= t('.options')%></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post["id"] %></td>
        <td><%= post["userId"] %></td>
        <td><%= post["title"] %></td>
        <td><%= link_to t(:show), api_v1_post_path(post["id"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
