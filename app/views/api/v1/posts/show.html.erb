<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0"><%= @post["title"] %></h1>

<hr class="mt-2 mb-5">

<p class="lead"><%= @post["body"] %></p>

<%= form_tag api_v1_post_path, method: :get do %>
  <div class="input-group mb-3">
    <%= text_field_tag :comment_name, nil, class: 'form-control', placeholder: "Filter comments by name"%>
    <div class="input-group-append">
      <%= submit_tag 'Filter', class: 'btn btn-outline-secondary' %>
    </div>
  </div>
<% end %>

<%= link_to 'Clear filter', api_v1_post_path(@post["id"]), class: 'btn btn-secondary btn-sm float-right' %>

<% @comments.each do |comment| %>
  <div class="media mb-4">
    <%= image_tag "http://placehold.it/50x50", class: 'd-flex mr-3 rounded-circle', alt: '' %>
    <div class="media-body">
      <h5 class="mt-0"><%= comment["name"] %></h5>
      <p>By: <%= comment["email"] %></p>
      <p><%= comment["body"] %></p>
    </div>
  </div>
<% end %>
